# Git
alias ga='git add -A'
alias gb='git branch'
alias gc='git checkout'
alias gcm='git ci -m'
alias gl='git l'
alias gs='git status'

# Autojump
alias jj='j -a'

# Play development
alias prun='play "~run"'
alias gw='grunt watch'

# Shell
alias ll='ls -alGh'
alias l='ls -Gh'
alias du='du -h -d 2'

# Alias Editing
alias ae='vim $HOME/.zsh/config/aliases.zsh'
alias ar='source $HOME/.zsh/config/aliases.zsh'

# zsh profile editing
alias ze='vim ~/.zshrc'
alias zr='source ~/.zshrc'

