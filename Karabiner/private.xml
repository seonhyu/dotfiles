<?xml version="1.0"?>
<root>
    <appdef>
        <appname>iTerm2</appname>
        <equal>com.googlecode.iterm2</equal>
    </appdef>
    <appdef>
        <appname>jetbrains</appname>
        <equal>com.jetbrains.intellij</equal>
    </appdef>
    <appdef>
        <appname>Chrome</appname>
        <equal>com.google.Chrome</equal>
    </appdef>

    <item>
        <name>Hangeul</name>
        <item>
            <name>iTerm2 VI ESC</name>
            <identifier>private.iterm-esc</identifier>
            <inputsource_only>KOREAN</inputsource_only>
            <only>iTerm2</only>
            <autogen>
                __KeyToKey__
                KeyCode::ESCAPE,
                KeyCode::SPACE, ModifierFlag::SHIFT_L,
                KeyCode::VK_WAIT_50MS,
                KeyCode::ESCAPE,
            </autogen>
        </item>
        <item>
            <name>iTerm2 한영 전환</name>
            <identifier>private.iterm-vi-korean</identifier>
            <inputsource_only>KOREAN</inputsource_only>
            <only>iTerm2</only>
            <autogen>
                __KeyToKey__
                KeyCode::SPACE, ModifierFlag::SHIFT_L,
                KeyCode::SPACE,  ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L,
            </autogen>
        </item>
        <item>
            <name>Terminal vim에서 shift+enter</name>
            <identifier>private.iterm-vi-shift</identifier>
            <only>iTerm2</only>
            <autogen>
                __KeyToKey__
                KeyCode::RETURN, ModifierFlag::SHIFT_L,
                KeyCode::ESCAPE,
                KeyCode::O,
            </autogen>
        </item>
        <item>
            <name>IntelliJ 한글상태 Enter</name>
            <identifier>private.jetbrains</identifier>
            <inputsource_only>KOREAN</inputsource_only>
            <only>jetbrains</only>
            <autogen>
                __KeyToKey__
                KeyCode::RETURN,
                KeyCode::CURSOR_RIGHT,
                KeyCode::VK_WAIT_10MS,
                KeyCode::RETURN,
            </autogen>
        </item>
        <item>
            <name>IntelliJ 한글상태 ESC</name>
            <identifier>private.jetbrains-esc</identifier>
            <inputsource_only>KOREAN</inputsource_only>
            <only>jetbrains</only>
            <autogen>
                __KeyToKey__
                KeyCode::ESCAPE,
                KeyCode::SPACE, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
                KeyCode::VK_WAIT_10MS,
                KeyCode::ESCAPE,
            </autogen>
        </item>
        <item>
            <name>App 전환시 영문모드로</name>
            <identifier>private.start-on-eng</identifier>
            <inputsource_only>KOREAN</inputsource_only>
            <autogen>
                __KeyToKey__
                KeyCode::TAB, ModifierFlag::COMMAND_L,
                KeyCode::SPACE, ModifierFlag::SHIFT_L,
                KeyCode::TAB, ModifierFlag::COMMAND_L
            </autogen>
        </item>
    </item>
</root>
